{
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "es2019",
      "es2020.string"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "target": "es5"
  },
  "include": ["src", "bin"],
  "exclude": ["**/__tests__/*"]
}
